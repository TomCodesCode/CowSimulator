// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build Cow",
      "type": "shell",
      "command": "/usr/bin/g++",
      "args": [
        "-std=c++17",
        "-I", "src",
        "-I", "third_party/imgui",
        "-I", "third_party/imgui/backends",
        "-I", "/usr/include",
        "-I", "/usr/include/glm",
        "-I", "/usr/include/GL",
        "-I", "/usr/include/GLFW",
        "src/main.cpp",
        "src/cow.cpp",                   // add any other .cpp modules
        "third_party/imgui/imgui.cpp",
        "third_party/imgui/imgui_draw.cpp",
        "third_party/imgui/imgui_widgets.cpp",
        "third_party/imgui/backends/imgui_impl_glfw.cpp",
        "third_party/imgui/backends/imgui_impl_opengl3.cpp",
        "-lGL", "-lGLEW", "-lglfw",
        "-o", "build/Cow"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
